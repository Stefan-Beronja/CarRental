@model CarRental.Models.Booking

@{
    ViewData["Title"] = "Book a Car";
    var pricePerDay = Model.TotalPrice;
}

<div>
    <h1 class="text-center">Book a Car</h1>

    <div class="row">
        <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 my-3" role="alert">
            Please click the <b>Refresh</b> button after each date change.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>

    <div class="row">
        <div class="col-6 offset-3">
            <form asp-action="Create" asp-controller="Booking" method="post" class="">
                <input type="hidden" asp-for="CarId" />
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="BookingId" />

                <input type="hidden" id="PricePerDay" value="@pricePerDay" />
        
                <div class="form-group">
                    <label asp-for="StartDate" class="form-label">Start date:</label>
                    <input asp-for="StartDate" type="date" class="form-control" id="StartDate" />
                    <span asp-validation-for="StartDate" class="validation-message"></span>
                </div>

                <div class="form-group mt-4">
                    <label asp-for="EndDate" class="form-label">End date:</label>
                    <input asp-for="EndDate" type="date" class="form-control" id="EndDate" />
                    <span asp-validation-for="EndDate" class="validation-message"></span>
                </div>

                <div class="form-group mt-4">
                    <label class="mb-2">Total Price:</label>
                    <span id="TotalPriceDisplay" class="form-control">@Model.TotalPrice €</span>
                    <input asp-for="TotalPrice" type="hidden" id="TotalPrice" />
                </div>

                <div class="form-group my-4  d-flex justify-content-between">
                    <div>
                        <button name="action" value="confirm" type="submit" class="btn btn-secondary">Confirm Booking</button>
                    </div>

                    <div>
                        <button name="action" value="refresh" type="submit" class="btn btn-secondary">Refresh</button>
                    </div>

                  

                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <div asp-validation-summary="All" class="validation-summary" ></div>
</div>

<script>

</script>