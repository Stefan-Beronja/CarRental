@model CarRental.Models.Booking

@{
    ViewData["Title"] = "Booking conformation";
}

<h2 class="my-5">Thank you for boooking</h2>

<h4 class="mb-4">Your reservation details are:</h4>

<div class="row">
    <div class="col-5">
        <ul calss="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center"><strong>Car:</strong> @Model.Car.Make @Model.Car.Model</li>
            <li class="list-group-item d-flex justify-content-between align-items-center"><strong>Start Date:</strong> @Model.StartDate.ToShortDateString()</li>
            <li class="list-group-item d-flex justify-content-between align-items-center"><strong>End date:</strong> @Model.EndDate.ToShortDateString()</li>
            <li class="list-group-item d-flex justify-content-between align-items-center"><strong>Total Price:</strong><span class="input-group-text">@Model.TotalPrice €</span></li>
        </ul>
    </div>
</div>

